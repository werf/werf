---
layout: none
permalink: /feed.xml
---
{%- assign events = site.data.releases_history.history | sort: "ts" | reverse -%}
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0"
	xmlns:atom="http://www.w3.org/2005/Atom"
	xmlns:dc="http://purl.org/dc/elements/1.1/"
	xmlns:sy="http://purl.org/rss/1.0/modules/syndication/"
>
  <channel>
    <title>Обновления werf</title>
    <description>Информация об изменениях на всех активных каналах обновлений werf.</description>
    <sy:updatePeriod>daily</sy:updatePeriod>
    <sy:updateFrequency>1</sy:updateFrequency>
    <link>{{ site.url }}/releases.html</link>
    <atom:link href="{{ site.url }}/feed.xml" rel="self" type="application/rss+xml" />
    {%- assign feed_items = site.feed_items | default: 50 %}
    {%- for event in events limit:feed_items %}
    {%- assign version = event.version | normalize_version %}
    {%- assign event_info = site.data.releases.releases | where: "tag_name", version | first %}
      {%- if event_info %}
      <item>
        <title>Канал обновлений {{ event.group }}/{{ event.name }} на {{ event.version }}</title>
        <description></description>
        <pubDate>{{ event.ts | date_to_rfc822 }}</pubDate>
        <link>{{ event_info.html_url }}</link>
        <guid isPermaLink="false">{{ event.group }}-{{ event.name }}-{{ event.ts }}</guid>
      </item>
      {%- endif %}
    {%- endfor %}
  </channel>
</rss>
