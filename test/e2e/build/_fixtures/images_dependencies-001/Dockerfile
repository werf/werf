ARG BASE_IMAGE=alpine:latest

FROM ${BASE_IMAGE}

ARG BASE_STAPEL_IMAGE_NAME
ARG BASE_STAPEL_IMAGE_ID
ARG BASE_STAPEL_IMAGE_REPO
ARG BASE_STAPEL_IMAGE_TAG

ARG BASE_DOCKERFILE_IMAGE_NAME
ARG BASE_DOCKERFILE_IMAGE_ID
ARG BASE_DOCKERFILE_IMAGE_REPO
ARG BASE_DOCKERFILE_IMAGE_TAG

RUN echo ${BASE_STAPEL_IMAGE_NAME} > /BASE_STAPEL_IMAGE_NAME
RUN echo ${BASE_STAPEL_IMAGE_ID} > /BASE_STAPEL_IMAGE_ID
RUN echo ${BASE_STAPEL_IMAGE_REPO} > /BASE_STAPEL_IMAGE_REPO
RUN echo ${BASE_STAPEL_IMAGE_TAG} > /BASE_STAPEL_IMAGE_TAG

RUN echo ${BASE_DOCKERFILE_IMAGE_NAME} > /BASE_DOCKERFILE_IMAGE_NAME
RUN echo ${BASE_DOCKERFILE_IMAGE_ID} > /BASE_DOCKERFILE_IMAGE_ID
RUN echo ${BASE_DOCKERFILE_IMAGE_REPO} > /BASE_DOCKERFILE_IMAGE_REPO
RUN echo ${BASE_DOCKERFILE_IMAGE_TAG} > /BASE_DOCKERFILE_IMAGE_TAG
